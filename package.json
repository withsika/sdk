{
  "name": "@sika/js",
  "version": "0.1.0",
  "description": "Sika Payments JavaScript SDK for embedded checkout",
  "type": "module",
  "main": "./dist/sika.umd.cjs",
  "module": "./dist/sika.js",
  "types": "./dist/sika.d.ts",
  "exports": {
    ".": {
      "types": "./dist/sika.d.ts",
      "import": "./dist/sika.js",
      "require": "./dist/sika.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && BUILD_FORMAT=es vite build && BUILD_FORMAT=umd vite build",
    "build:es": "BUILD_FORMAT=es vite build",
    "build:umd": "BUILD_FORMAT=umd vite build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "eslint": "^9.28.0",
    "globals": "^16.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "sika",
    "payments",
    "checkout",
    "sdk"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/withsika/sdk"
  }
}
